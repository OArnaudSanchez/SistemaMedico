                    @Html.RadioButtonFor(model => model.asegurado, true)<span>SI</span>
                    @Html.RadioButtonFor(model => model.asegurado, false)<span>NO</span>
                    @Html.ValidationMessageFor(model => model.asegurado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

