@model SistemaControlMedico.Models.Ingresos

@{
    ViewBag.Title = "Registrar Ingresos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div>
        <h3>Registrar Ingresos</h3>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.paciente, "Cedula Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("paciente", null, "Seleccione el Paciente", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.paciente, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.habitacion, "Tipo de Habitacion", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("habitacion", null, "Seleccione el tipo de Habitacion", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.habitacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.medico, "Nombre Medico", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("medico", null, "Seleccione el Medico", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.medico, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fechaIngreso, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.fechaIngreso, new { @type = "date", @class = "form-control datepicker" })
                        @Html.ValidationMessageFor(model => model.fechaIngreso, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="REGISTRAR INGRESO" class="btn btn-primary" />
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
