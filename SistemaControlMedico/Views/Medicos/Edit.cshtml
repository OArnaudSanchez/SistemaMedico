@model SistemaControlMedico.Models.Medicos

@{
    ViewBag.Title = "Modificar Medicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div>
        <h3>Modificar Medicos</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idMedico)

                <div class="form-group">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.exequatur, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.exequatur, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.exequatur, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.especialidad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.especialidad,new SelectList(new[] { "ALERGOLOGIA","ANESTESIOLOGIA","CARDIOLOGIA","CIRUGIAS","DIAGNOSTICOS","ESTOMATOLOGIA",
                       "ENDOCRINOLOGIA","GASTROEnTEROLOGIA","GERIATRIA","GINECOLOGIA","HEMATOLOGIA","INFECTOLOGIA","NEFROLOGIA","NEUNOLOGIA","NEUROLOGIA","NUTRIOLOGIA",
                       "ODONTOLOGIA","OFTALMOLOGIA","ONCOLOGIA","OTORRINOLARINGOLOGIA","PEDIATRIA","PROCTOLOGIA","PSIQUIATRIA",
                       "REHABILITACION","REUMATOLOGIA","TRAUMATOLOGIA","TOXICOLOGIA","UROLOGIA"}), "Seleccione la Especialidad", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.especialidad, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })

                    </div>
                </div>
            </div>
        }
    </div>
</div>



